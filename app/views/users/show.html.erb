<% provide :title, @user.fullname %>
<div class="container bootstrap snippets">    
  <div class="row" id="user-profile">
    <div class="col-lg-3 col-md-4 col-sm-4">
      <div class="main-box clearfix">
        <h2><%= @user.fullname %></h2>
        <%= image_tag(image(@user.avatar.url),  class: "profile-img img-responsive center-block") %>
      </div>
    </div>
    <div class="col-lg-9 col-md-8 col-sm-8">
      <div class="main-box clearfix">
        <div class="profile-header">
          <h3><span><%= t ".info" %></span></h3>
        </div>
      <div class="row profile-user-info">
        <div class="col-sm-8">
          <div class="profile-user-details clearfix">
            <div class="profile-user-details-label"><%= t ".email" %></div>
            <div class="profile-user-details-value"><%= @user.email %></div>
          </div>
          <div class="profile-user-details clearfix">
            <div class="profile-user-details-label"><%= t ".phone" %></div>
            <div class="profile-user-details-value"><%= @user.phone %></div>
          </div>
          <div class="profile-user-details clearfix">
            <div class="profile-user-details-label"><%= t ".address" %></div>
            <div class="profile-user-details-value"><%= @user.address %></div>
          </div>
        </div>      
      </div>
      </div>
    </div>
  </div>
</div>
